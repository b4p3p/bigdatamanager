<link  href="/node_modules/bootstrap-table/dist/bootstrap-table.min.css" rel="stylesheet" >

<style>
   .level{
      display: inline-block;
      width: 25px;  height: 25px;
      text-align: center;
      font-size: 20px;   font-weight: bold;
      border-radius: 5px;
      color: white;  background: grey;
   }
   .admin{
      background: red;
   }
   .user{
      background: green;
   }
   .row{
      margin-bottom: 5px;
   }
</style>

<script>
   var scope = angular.element( $("#ngview")).scope();
</script>

<h3>Users</h3>

<table id="table-users" data-toggle="table"
       data-url="/users/users"
       data-cache="false" data-pagination="true"
       data-sort-name="name" data-sort-order="desc"
       data-search="true">
   <thead>
   <tr>
      <th data-sortable="true" data-field="level" data-formatter="scope.formatter.level">
         Level
      </th>
      <th data-sortable="true" data-field="username" >
         Username
      </th>
      <th data-sortable="true" data-field="firstName">
         First Name
      </th>
      <th data-sortable="true" data-field="lastName">
         Last Name
      </th>
      <th data-sortable="true" data-field="created" data-formatter="scope.formatter.toStringDate">
         Created
      </th>
      <th data-sortable="true" data-field="lastLogin">
         Last login
      </th>
      <th data-width="50">
         Delete users
      </th>
   </tr>
   </thead>

</table>

<div>
   <div class="row">
      <div class="level admin">1</div>
      Administrator
   </div>
   <div class="row">
      <div class="level user">0</div>
      User
   </div>
</div>


